<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_configuration_estate_action" model="ir.actions.act_window">
        <field name="name">Meters</field>
        <field name="res_model">meter_model</field>
        <field name="view_mode">tree</field>
    </record>

    <record id="meter_view_tree" model="ir.ui.view">
        <field name="name">meter.tree</field>
        <field name="model">meter_model</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="price"/>
            </tree>
        </field>
    </record>
</odoo>

